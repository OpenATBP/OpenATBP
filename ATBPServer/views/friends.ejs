<!DOCTYPE html>
<html>
	<head>
		<title>OpenATBP Registration</title>

		<style type="text/css">
			html, body {
				margin: 0;
				padding: 0;
				width: 100%;
				height: 100%;
				overflow: hidden;
			}
			#container {
				margin: 0;
				padding: 0;
				width: 100%;
				height: 100%;
				clear: both;
			}
		</style>
	</head>
	<script type="text/javascript">
		const urlParams = new URLSearchParams(window.location.search);
		const failed = urlParams.get('added');
		if(failed != undefined && failed == 'true') window.alert("Player added!");
		else if(failed != undefined) window.alert("Failed to add user as friend!");
	</script>
	<body onresize="OnResize()">
		<div id="container">
			<form action="/friend/add" method="post" id="addFriendForm">
				<label for="username">Username</username>
				<input type="text" id="username" name="username">
				<input type="submit">
			</form>
			<form action="/friend/accept" method="post" id="requestForm"/>
			<br/>
      <script type="text/javascript">
            var requests = '<%- requests %>';
						requests = JSON.parse(requests);
						var html = ``;
						for(var r of requests){
							html+=`<p style="display:inline">${r.dname}</p><button type="button" value="${r.username}" onClick="sendPostRequest(this.value)">Submit</button><button type="button" value="${r.username}" onClick="sendDeclineRequest(this.value)">Decline</button><br/>`;
						}
						document.getElementById("requestForm").innerHTML=html;

						function sendPostRequest(value){
							console.log(value);
							const form = document.getElementById('requestForm');
							var formData = new FormData();
							formData.append('value',value);
							//console.log(formData);
							fetch(`/friend/accept/${value}`, {
								method: "POST",
								body: JSON.stringify({test: "Test"})
							}).then(function() {
								window.location.reload();
							}).catch(console.error);
						}

						function sendDeclineRequest(value){
							console.log(value);
							const form = document.getElementById('requestForm');
							var formData = new FormData();
							formData.append('value',value);
							//console.log(formData);
							fetch(`/friend/decline/${value}`, {
								method: "POST",
								body: JSON.stringify({test: "Test"})
							}).then(function() {
								window.location.reload();
							}).catch(console.error);
						}

      </script>
	</body>
</html>
